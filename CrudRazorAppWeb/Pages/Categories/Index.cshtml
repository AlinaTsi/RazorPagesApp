@page
@model CrudRazorAppWeb.Pages.Categories.IndexModel
@{
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">Create Category</a>
        </div>
    </div>



<div class="container p-3">
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.Categories)
        {
            <tr>
                <td width="40%">@obj.Name</td>
                <td width="30%">@obj.Age</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                    <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>  &nbsp; Edit
                    </a>
                                <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i> &nbsp; Delete
                            </a>
                            </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>