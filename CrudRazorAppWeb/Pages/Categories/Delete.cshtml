@page
@model CrudRazorAppWeb.Pages.Categories.DeleteModel
@{
}
<form method="post">
    <input hidden asp-for="Category.Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" disabled class="form-control"/>
            </div>
            <div class="mb-3">
            <label asp-for="Category.Age"></label>
            <input asp-for="Category.Age" disabled class="form-control"/>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}